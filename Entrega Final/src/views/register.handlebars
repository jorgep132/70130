<main>
    <div class="d-flex justify-content-center align-items-center">
        <h1>Register</h1>
        <form action="/users/register" method="POST" class="form-group w-50">
            <input type="text" name="first_name" class="form-control" placeholder="Nombre" required minlength="3" maxlength="20">
            <input type="text" name="last_name" class="form-control" placeholder="Apellido" required minlength="3" maxlength="20">
            <input type="text" name="email" class="form-control" placeholder="Email" required minlength="8" maxlength="35">
            <input type="password" name="password" class="form-control" placeholder="Password" required minlength="8" maxlength="20">
            <button>Enviar</button>
            <a href="/users/login">Login</a>
        </form>
    </div>
<link rel="stylesheet" type="text/css" href="/css/register.css">
</main>